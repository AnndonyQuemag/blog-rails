<%= form_with model: @article do |form| %>
  <div class="input-group mb-3">
    <span class="input-group-text" id="title">Title</span><br><br>
    <%= form.text_field :title, class: "form-control", style: "width: 77rem; height: 50px" %><br>
  </div>
  <div>
    <% @article.errors.full_messages_for(:title).each do |message| %>
      <div style="margin-top:20px"><%= message %></div>
    <% end %>
  </div>
  <br>
  <div class="input-group mb-3">
    <span class="input-group-text" id="body">Body</span>
    <%= form.text_area :body, class: "form-control", style: "width: 77rem" %> 
  </div>
  <div>
    <% @article.errors.full_messages_for(:body).each do |message| %>
      <div ><%= message %></div>
    <% end %>
  </div>
  <br>
  <div>
    <%= form.label :status %><br>
    <%= form.select(:status, [ 'public', 'private', 'archived' ], {}, { :class => 'form-select form-select-lg mb-3' }) %>
  </div>
  <div>
    <% if current_user %>
      <%= form.hidden_field :user_id, 
                            value: current_user.id,
                            class: "form-control", 
                            style: "width: 77rem"
      %>
    <% end %>
  </div>
  <div style = "margin: 1rem; padding: 1rem;">
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
    



